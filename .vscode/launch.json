    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug CPS",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/CPS/build/bin/CPS",
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/local/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": false
                }
            ],
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false
        },
        {
            "name": "Debug CPS (lldb)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/CPS/build/bin/CPS",
            "MIMode": "lldb",
            "miDebuggerPath": "/usr/bin/lldb-5.0",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false
        }
    ]
}